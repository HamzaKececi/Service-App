<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ana_sayfa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="16dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <!-- Scrollable content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <!-- Üst Saat -->

        <!-- Sağ üst ikonlar -->

        <!-- Kullanıcı Kartı -->

        <LinearLayout
            android:id="@+id/kullaniciKarti"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_chip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="12dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="54dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_profile_circle"
                android:contentDescription="profile"
                android:padding="4dp"
                android:src="@drawable/ic_profile_placeholder"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="59dp" />

            <TextView
                android:id="@+id/txtKullanici"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merhaba!\nHamza Keçeci"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="66dp"
                tools:layout_editor_absoluteY="59dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iconPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/kullaniciKarti">

            <ImageView
                android:id="@+id/btnMap"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_chip"
                android:padding="8dp"
                android:src="@drawable/ic_map"
                tools:layout_editor_absoluteX="302dp"
                tools:layout_editor_absoluteY="54dp" />

            <ImageView
                android:id="@+id/btnCart"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_chip"
                android:padding="8dp"
                android:src="@drawable/ic_cart"
                tools:layout_editor_absoluteX="347dp"
                tools:layout_editor_absoluteY="54dp" />
        </LinearLayout>

        <!-- Başlık -->
        <TextView
            android:id="@+id/txtBaslik"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="Evini Akıllandır,\nHayatını Kolaylaştır"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kullaniciKarti" />

        <!-- Arama Barı -->
        <LinearLayout
            android:id="@+id/aramaBar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_search"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtBaslik">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="search"
                android:src="@drawable/ic_search"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="216dp" />

            <TextView
                android:id="@+id/txtAramaHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Servis Ara"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="218dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="mic"
                android:src="@drawable/ic_mic"
                tools:layout_editor_absoluteX="351dp"
                tools:layout_editor_absoluteY="216dp" />
        </LinearLayout>

        <!-- Kategori Butonları (Çipler) -->
        <LinearLayout
            android:id="@+id/kategoriPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aramaBar">

            <TextView
                style="@style/CategoryChip"
                android:text="Tümü"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="266dp" />

            <TextView
                style="@style/CategoryChip"
                android:text="Temizlik"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="266dp" />

            <TextView
                style="@style/CategoryChip"
                android:text="Tesisat"
                tools:layout_editor_absoluteX="164dp"
                tools:layout_editor_absoluteY="266dp" />

            <TextView
                style="@style/CategoryChip"
                android:text="Elektronik"
                tools:layout_editor_absoluteX="238dp"
                tools:layout_editor_absoluteY="266dp" />
        </LinearLayout>

        <!-- FOTOĞRAF - Banner (rounded) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/bannerCard"
            android:layout_width="374dp"
            android:layout_height="235dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kategoriPanel">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="322dp">

                <ImageView
                    android:id="@+id/imgBanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="banner"
                    android:scaleType="centerCrop"
                    android:src="@drawable/banner_placeholder"
                    tools:layout_editor_absoluteX="20dp"
                    tools:layout_editor_absoluteY="322dp" />

                <!-- Kırmızı indirim rozeti -->
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Yakındaki Uzmanlar Başlığı -->
        <TextView
            android:id="@+id/txtUzmanBaslik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="Yakındaki uzmanlar"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bannerCard" />

        <TextView
            android:id="@+id/txtTumunuGor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:text="Tümünü Gör"
            android:textColor="@color/primary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bannerCard" />

        <!-- Liste: Örnek kart 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardUzman1"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0.5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtUzmanBaslik">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="577dp">

                <ImageView
                    android:id="@+id/uzmanProfile1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_profile_circle"
                    android:src="@drawable/ic_profile_placeholder"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="591dp" />

                <LinearLayout
                    android:id="@+id/uzmanMeta1"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="-5dp"
                    android:layout_toEndOf="@id/uzmanProfile1"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="96dp"
                    tools:layout_editor_absoluteY="589dp">

                    <TextView
                        android:id="@+id/uzmanAdi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ayşe Demir"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="96dp"
                        tools:layout_editor_absoluteY="589dp" />

                    <TextView
                        android:id="@+id/uzmanServis1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ev Temizliği"
                        android:textSize="12sp"
                        tools:layout_editor_absoluteX="96dp"
                        tools:layout_editor_absoluteY="611dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="96dp"
                        tools:layout_editor_absoluteY="627dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star"
                            tools:layout_editor_absoluteX="96dp"
                            tools:layout_editor_absoluteY="627dp" />

                        <TextView
                            android:id="@+id/uzmanRating1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4,9 (234) · 450 iş"
                            android:textSize="12sp"
                            tools:layout_editor_absoluteX="112dp"
                            tools:layout_editor_absoluteY="627dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/uzmanLokasyon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/uzmanMeta1"
                    android:layout_alignStart="@+id/uzmanMeta1"
                    android:layout_alignEnd="@+id/uzmanMeta1"
                    android:layout_marginStart="1dp"
                    android:text="Kadıköy, İstanbul"
                    android:textSize="12sp"
                    tools:layout_editor_absoluteX="203dp"
                    tools:layout_editor_absoluteY="640dp" />

                <Button
                    android:id="@+id/btnIncele1"
                    android:layout_width="92dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_button_primary"
                    android:text="İncele"
                    android:textColor="@android:color/white"
                    tools:layout_editor_absoluteX="286dp"
                    tools:layout_editor_absoluteY="598dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Örnek kart 2 (kopya) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardUzman2"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0.5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardUzman1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="577dp">

                <ImageView
                    android:id="@+id/uzmanProfile2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_profile_circle"
                    android:src="@drawable/ic_profile_placeholder"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="591dp" />

                <LinearLayout
                    android:id="@+id/uzmanMeta2"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="-5dp"
                    android:layout_toEndOf="@id/uzmanProfile2"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="96dp"
                    tools:layout_editor_absoluteY="589dp">

                    <TextView
                        android:id="@+id/uzmanAdi2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ayşe Demir"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="96dp"
                        tools:layout_editor_absoluteY="589dp" />

                    <TextView
                        android:id="@+id/uzmanServis2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ev Temizliği"
                        android:textSize="12sp"
                        tools:layout_editor_absoluteX="96dp"
                        tools:layout_editor_absoluteY="611dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="96dp"
                        tools:layout_editor_absoluteY="627dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star"
                            tools:layout_editor_absoluteX="96dp"
                            tools:layout_editor_absoluteY="627dp" />

                        <TextView
                            android:id="@+id/uzmanRating2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4,9 (234) · 450 iş"
                            android:textSize="12sp"
                            tools:layout_editor_absoluteX="112dp"
                            tools:layout_editor_absoluteY="627dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/uzmanLokasyon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/uzmanMeta2"
                    android:layout_alignStart="@+id/uzmanMeta2"
                    android:layout_alignEnd="@+id/uzmanMeta2"
                    android:layout_marginStart="1dp"
                    android:text="Kadıköy, İstanbul"
                    android:textSize="12sp"
                    tools:layout_editor_absoluteX="203dp"
                    tools:layout_editor_absoluteY="640dp" />

                <Button
                    android:id="@+id/btnIncele2"
                    android:layout_width="92dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_button_primary"
                    android:text="İncele"
                    android:textColor="@android:color/white"
                    tools:layout_editor_absoluteX="286dp"
                    tools:layout_editor_absoluteY="598dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Son boşluk padding -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardUzman2"
            tools:layout_editor_absoluteX="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Alt navigasyon yuvarlatılmış konteyner -->
    <LinearLayout
        android:id="@+id/bottom_nav_container"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_bottom_nav"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/bg_nav_item"
            android:contentDescription="home"
            android:scaleType="centerInside"
            android:src="@drawable/ic_home"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="808dp" />


        <ImageButton
            android:id="@+id/nav_explore"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/bg_nav_item"
            android:contentDescription="explore"
            android:scaleType="centerInside"
            android:src="@drawable/ic_compass"
            tools:layout_editor_absoluteX="149dp"
            tools:layout_editor_absoluteY="808dp" />


        <ImageButton
            android:id="@+id/nav_fav"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/bg_nav_item"
            android:contentDescription="fav"
            android:scaleType="centerInside"
            android:src="@drawable/ic_heart"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="808dp" />


        <ImageButton
            android:id="@+id/nav_profile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/bg_nav_item"
            android:contentDescription="profile"
            android:scaleType="centerInside"
            android:src="@drawable/ic_users"
            tools:layout_editor_absoluteX="261dp"
            tools:layout_editor_absoluteY="808dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
