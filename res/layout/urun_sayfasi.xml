<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Scrollable content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- - BANNER + TOP CONTROLS - -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <ImageView
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="banner"
                android:scaleType="centerCrop"
                android:src="@drawable/is_gorseli" />

            <!-- Back -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="top|start"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="back"
                android:scaleType="fitCenter"
                android:src="@drawable/back" />

            <!-- Favorite -->
            <ImageButton
                android:id="@+id/btnFav"
                android:layout_width="35dp"
                android:layout_height="47dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_heart" />
        </FrameLayout>

        <!--- Membership chips (Klasik / Ekstra / Premium)  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Classic -->
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/chip_classic"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_classic_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Klasik"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_classic_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1200₺"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_classic_old3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="̶1̶5̶0̶0̶₺̶"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/chip_ekstra"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_classic_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Ekstra"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_classic_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1500₺"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_classic_old2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="̶2̶0̶0̶0̶₺̶"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/chip_premium"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_classic_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Premium"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_ekstra_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000₺"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_classic_old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="̶2̶5̶0̶0̶₺̶"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Ekstra -->

            <!-- Premium -->

        </LinearLayout>

        <!-- Profile Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_profile"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/profile_bg"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/profile_circle"
                    android:contentDescription="avatar"
                    android:padding="12dp"
                    android:src="@drawable/ic_profile_placeholder" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_toEndOf="@id/imgAvatar"
                    android:text="Ayşe Demir"
                    android:textColor="@color/text_primary_urun"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvName"
                    android:layout_alignStart="@id/tvName"
                    android:layout_marginTop="6dp"
                    android:text="Ev Temizliği"
                    android:textColor="@color/service_blue"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnPhone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="84dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:src="@drawable/phone" />

                <ImageButton
                    android:id="@+id/btnMessage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:src="@drawable/message" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!--- Rating / Stats / Completed Jobs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/profile_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Star + Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="star"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4,9"
                    android:textColor="@color/text_primary_urun"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="(234 değerlendirme)"
                    android:textColor="@color/review_grey"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Completed jobs -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCompletedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="450"
                    android:textColor="@color/text_primary_urun"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCompletedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tamamlanan iş"
                    android:textColor="@color/text_primary_urun"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/divider" />

        <!-- - About - -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvAboutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hakkımda"
                android:textColor="@color/text_primary_urun"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Uzman servis ekibimiz, evinizin her köşesinin kapsamlı ve detaylı temizliğini sağlar. Toz alma ve elektrik süpürgesi kullanımından, ovma ve dezenfekte etmeye kadar her detay özenle halledilir. Bu hizmet, yaşam alanınızı yenilemek, gizli kirleri ortadan kaldırmak ve daha sağlıklı bir ortam yaratmak için idealdir."
                android:textColor="@color/text_primary_urun"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Home indicator container (fixed at bottom) -->

</androidx.constraintlayout.widget.ConstraintLayout>
